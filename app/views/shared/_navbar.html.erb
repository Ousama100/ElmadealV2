<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag("Elmadeal-logo-base.png", {:style => "width:215px;"}) %>
  <% end %>
  <div class="navbar-wagon-right hidden-xs hidden-sm">
      <a href="tel:+221783848922">
        <div style="font-weight: bold;"> Service Client: +221 78 384 89 22</div>
      </a>
    </div>
    <div class="navbar-wagon-right visible-xs visible-sm">
        <a href="tel:+221783848922">
          <div style="font-weight: bold;font-size: 20px">Service Client:<i class="fas fa-phone"></i>  </div>
        </a>
    </div>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTuVxdq8U1McJjOtGQ44aEo7fosoXd4YcV3ANauGcm3BypF-xZqnA", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if current_user.roles.pluck(:role).include?(Role::OWNER) %>
          <% salons = current_user.salons.pluck(:name,:id) %>
          <% salons.each do |salon| %>
          <li>
            <%= link_to "Administration :#{salon[0]}",  dashboard_path(salon[1]), class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
          <% end %>
          <% end %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>
            <%= t(".sign_out", default: "Se déconnecter") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t("S'incrire", default: "S'incrire"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link", style: "margin-right: 30px" %>
    <%= link_to t("Se connecter", default: "Se connecter"), new_user_session_path , class: "navbar-wagon-link btn-treehouse btn-treehouse:hover" %>
    <% end %>

  </div>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <% if current_user.roles.pluck(:role).include?(Role::OWNER) %>
           <% salons = current_user.salons.pluck(:name,:id) %>
          <% salons.each do |salon| %>
          <li>
             <%= link_to "Administration :#{salon[0]}",  dashboard_path(salon[1]), class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
          <% end %>
        <% end %>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>
          <%= t(".sign_out", default: "Se déconnecter") %>
          <% end %>
        </li>
        <% else %>
        <li>
          <%= link_to t("S'incrire", default: "S'incrire"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link", style: "margin-right: 30px" %>
        </li>
        <li>
          <%= link_to t("Se connecter", default: "Se connecter"), new_user_session_path , class: "navbar-wagon-link btn-treehouse btn-treehouse:hover" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>